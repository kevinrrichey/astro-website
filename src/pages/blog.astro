---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Sample blog posts data
const blogPosts = [
	{
		title: "Getting Started with Astro: A Modern Web Framework",
		excerpt: "Learn how Astro's zero-JS-by-default approach can revolutionize your web development workflow.",
		date: "2024-12-01",
		author: "Alex Johnson",
		readTime: "5 min read",
		image: "/api/placeholder/400/200"
	},
	{
		title: "Why Tailwind CSS is Perfect for Component-Based Development",
		excerpt: "Discover how utility-first CSS can speed up your development process and improve consistency.",
		date: "2024-11-28",
		author: "Sarah Chen",
		readTime: "7 min read",
		image: "/api/placeholder/400/200"
	},
	{
		title: "Performance Optimization: Making Your Website Lightning Fast",
		excerpt: "Essential techniques for improving your website's Core Web Vitals and user experience.",
		date: "2024-11-25",
		author: "Mike Rodriguez",
		readTime: "6 min read",
		image: "/api/placeholder/400/200"
	},
	{
		title: "SEO Best Practices for Modern Web Development",
		excerpt: "How to ensure your website ranks well in search engines with modern development practices.",
		date: "2024-11-22",
		author: "Alex Johnson",
		readTime: "8 min read",
		image: "/api/placeholder/400/200"
	},
	{
		title: "Building Accessible Websites: A Developer's Guide",
		excerpt: "Learn how to create websites that are inclusive and accessible to all users.",
		date: "2024-11-19",
		author: "Sarah Chen",
		readTime: "9 min read",
		image: "/api/placeholder/400/200"
	},
	{
		title: "The Future of Web Development: Trends to Watch",
		excerpt: "Exploring emerging technologies and trends that will shape the future of web development.",
		date: "2024-11-16",
		author: "Mike Rodriguez",
		readTime: "6 min read",
		image: "/api/placeholder/400/200"
	}
];
---

<Layout title="Blog - AstroSite" description="Latest insights and tutorials on web development, Astro, and modern web technologies">
	<Header />
	
	<main>
		<!-- Hero Section -->
		<section class="bg-gray-50 py-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
						Our Blog
					</h1>
					<p class="text-xl text-gray-600 max-w-3xl mx-auto">
						Stay updated with the latest insights, tutorials, and best practices 
						in web development and modern technologies.
					</p>
				</div>
			</div>
		</section>

		<!-- Featured Post -->
		<section class="py-16 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 md:p-12 text-white">
					<div class="max-w-3xl">
						<div class="flex items-center mb-4">
							<span class="bg-white bg-opacity-20 px-3 py-1 rounded-full text-sm font-medium">
								Featured Post
							</span>
						</div>
						<h2 class="text-3xl md:text-4xl font-bold mb-4">
							Getting Started with Astro: A Modern Web Framework
						</h2>
						<p class="text-xl text-blue-100 mb-6">
							Learn how Astro's zero-JS-by-default approach can revolutionize your web development workflow. 
							Build faster, more efficient websites with less JavaScript.
						</p>
						<div class="flex items-center text-blue-100 mb-6">
							<span class="mr-4">By Alex Johnson</span>
							<span class="mr-4">•</span>
							<span class="mr-4">Dec 1, 2024</span>
							<span>•</span>
							<span class="ml-4">5 min read</span>
						</div>
						<a href="#" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block">
							Read More
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Blog Posts Grid -->
		<section class="py-20 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{blogPosts.map((post) => (
						<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
							<div class="h-48 bg-gradient-to-r from-gray-200 to-gray-300 flex items-center justify-center">
								<svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
								</svg>
							</div>
							<div class="p-6">
								<div class="flex items-center text-sm text-gray-500 mb-3">
									<span>{post.author}</span>
									<span class="mx-2">•</span>
									<span>{post.date}</span>
									<span class="mx-2">•</span>
									<span>{post.readTime}</span>
								</div>
								<h3 class="text-xl font-semibold text-gray-900 mb-3 line-clamp-2">
									{post.title}
								</h3>
								<p class="text-gray-600 mb-4 line-clamp-3">
									{post.excerpt}
								</p>
								<a href="#" class="text-blue-600 font-medium hover:text-blue-700 transition-colors">
									Read More →
								</a>
							</div>
						</article>
					))}
				</div>
			</div>
		</section>

		<!-- Newsletter Signup -->
		<section class="py-20 bg-blue-600 text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
				<p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
					Subscribe to our newsletter and never miss the latest insights, tutorials, 
					and updates from our development team.
				</p>
				<div class="max-w-md mx-auto flex gap-4">
					<input
						type="email"
						placeholder="Enter your email"
						class="flex-1 px-4 py-3 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-white"
					/>
					<button class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
						Subscribe
					</button>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>
