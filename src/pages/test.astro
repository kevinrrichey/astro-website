import Layout from '../layouts/Layout.astro';
---

<Layout title="Test Page - AstroSite" description="Test page to verify everything is working">
	<div class="min-h-screen bg-gray-100 flex items-center justify-center">
		<div class="bg-white p-8 rounded-lg shadow-lg text-center">
			<h1 class="text-3xl font-bold text-gray-900 mb-4">✅ Test Page Working!</h1>
			<p class="text-gray-600 mb-6">If you can see this page, your Astro setup is working correctly.</p>
			<div class="space-y-2">
				<a href="/" class="block text-blue-600 hover:text-blue-800">← Back to Home</a>
				<a href="/about" class="block text-blue-600 hover:text-blue-800">Go to About</a>
				<a href="/services" class="block text-blue-600 hover:text-blue-800">Go to Services</a>
				<a href="/blog" class="block text-blue-600 hover:text-blue-800">Go to Blog</a>
				<a href="/contact" class="block text-blue-600 hover:text-blue-800">Go to Contact</a>
			</div>
		</div>
	</div>
</Layout>

